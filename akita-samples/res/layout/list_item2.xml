<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:akita="http://schemas.alibaba.com/apk/res/akita"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="10dp"
        android:gravity="center"
        android:orientation="vertical" >
    <TextView
        android:id="@+id/text"
        android:gravity="left"
        android:text="@string/test"
        android:textSize="12sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp" />
    <com.alibaba.akita.widget.RemoteImageView
        android:id="@+id/ri"
        android:layout_width="280dp"
        akita:imgBoxWidth="280"
        android:layout_height="wrap_content"
        android:src="@android:drawable/dialog_frame"
        akita:defaultDrawable="@android:drawable/dialog_frame"
        android:scaleType="centerCrop"
        android:indeterminateDrawable="@android:drawable/progress_indeterminate_horizontal"
        akita:errorDrawable="@android:drawable/stat_notify_error"
        akita:autoLoad="false" />
</LinearLayout>
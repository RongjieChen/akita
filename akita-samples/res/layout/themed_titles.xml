<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:akita="http://schemas.android.com/apk/res/com.alibaba.akita.samples"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <com.alibaba.akita.widget.TitlePageIndicator
        android:id="@+id/indicator"
        android:padding="10dip"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:background="#18FF0000"
        akita:footerColor="#FFAA2222"
        akita:footerLineHeight="1dp"
        akita:footerIndicatorHeight="3dp"
        akita:footerIndicatorStyle="underline"
        akita:textColor="#AA000000"
        akita:selectedColor="#FF000000"
        akita:selectedBold="true"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

</LinearLayout>